<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.kylemiller.cardgame.GameActivity">

    <Button
        android:id="@+id/stick_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onStickButtonClicked"
        android:text="@string/stick"
        android:layout_marginLeft="88dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/twist_button"
        android:layout_marginRight="8dp"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/human_card_1"
        app:layout_constraintHorizontal_bias="0.52" />

    <Button
        android:id="@+id/twist_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onTwistButtonClicked"
        android:text="@string/Twist"
        android:layout_marginRight="88dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/human_card_2" />

    <ImageView
        android:id="@+id/table_background"
        android:layout_width="395dp"
        android:layout_height="340dp"
        app:srcCompat="@drawable/table"
        tools:layout_editor_absoluteX="-5dp"
        tools:layout_editor_absoluteY="69dp" />

    <ImageView
        android:id="@+id/dealer_card_1"
        android:layout_width="67dp"
        android:layout_height="91dp"
        app:srcCompat="@drawable/cardbackred"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="57dp"
        android:layout_marginLeft="100dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/dealer_card_2"
        android:layout_width="67dp"
        android:layout_height="91dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="57dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/dealer_card_1"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.186" />

    <ImageView
        android:id="@+id/human_card_1"
        android:layout_width="67dp"
        android:layout_height="91dp"
        android:background="@android:color/white"
        app:layout_constraintRight_toLeftOf="@+id/human_card_2"
        android:layout_marginRight="24dp"
        android:layout_marginTop="155dp"
        app:layout_constraintTop_toBottomOf="@+id/dealer_card_1" />

    <ImageView
        android:id="@+id/human_card_2"
        android:layout_width="67dp"
        android:layout_height="91dp"
        android:layout_marginRight="24dp"
        android:background="@android:color/white"
        app:layout_constraintRight_toLeftOf="@+id/human_card_3"
        android:layout_marginTop="155dp"
        app:layout_constraintTop_toBottomOf="@+id/dealer_card_2" />

    <ImageView
        android:id="@+id/human_card_3"
        android:layout_width="67dp"
        android:layout_height="91dp"
        android:layout_marginRight="24dp"
        android:background="@android:color/white"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="155dp"
        app:layout_constraintTop_toBottomOf="@+id/dealer_card_2" />

    <ImageView
        android:id="@+id/human_card_4"
        android:layout_width="67dp"
        android:layout_height="91dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/human_card_1"
        android:layout_marginTop="155dp"
        app:layout_constraintTop_toBottomOf="@+id/dealer_card_1" />

    <ImageView
        android:id="@+id/human_card2_suit"
        android:layout_width="30dp"
        android:layout_height="37dp"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/human_card_2"
        app:layout_constraintTop_toTopOf="@+id/human_card_2"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/human_card_2"
        app:layout_constraintBottom_toBottomOf="@+id/human_card_2"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/human_card1_suit"
        android:layout_width="30dp"
        android:layout_height="37dp"
        app:srcCompat="@mipmap/ic_launcher_round"
        app:layout_constraintTop_toTopOf="@+id/human_card_1"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/human_card_1"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/human_card_1"
        app:layout_constraintHorizontal_bias="0.619" />

    <ImageView
        android:id="@+id/dealer_card2_suit"
        android:layout_width="30dp"
        android:layout_height="37dp"
        app:srcCompat="@mipmap/ic_launcher_round"
        app:layout_constraintBottom_toBottomOf="@+id/dealer_card_2"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/dealer_card_2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/dealer_card_2"
        app:layout_constraintTop_toTopOf="@+id/dealer_card_2"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/human_card3_suit"
        android:layout_width="30dp"
        android:layout_height="37dp"
        app:srcCompat="@mipmap/ic_launcher_round"
        app:layout_constraintBottom_toBottomOf="@+id/human_card_3"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/human_card_3"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/human_card_3"
        app:layout_constraintTop_toTopOf="@+id/human_card_3"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/human_card4_suit"
        android:layout_width="30dp"
        android:layout_height="37dp"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/human_card_4"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/human_card_4"
        app:layout_constraintTop_toTopOf="@+id/human_card_4"
        android:layout_marginTop="38dp"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintBottom_toBottomOf="@+id/human_card_4"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/dealer_card2_num"
        android:layout_width="32dp"
        android:layout_height="38dp"
        android:text="TextView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/dealer_card_2"
        app:layout_constraintTop_toTopOf="@+id/dealer_card_2"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/dealer_card_2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="@+id/dealer_card_2"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/human_card3_num"
        android:layout_width="32dp"
        android:layout_height="38dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/human_card_3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/human_card_3"
        app:layout_constraintRight_toRightOf="@+id/human_card_3"
        app:layout_constraintTop_toTopOf="@+id/human_card_3"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/human_card1_num"
        android:layout_width="32dp"
        android:layout_height="38dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/human_card_1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/human_card_1"
        app:layout_constraintRight_toRightOf="@+id/human_card_1"
        app:layout_constraintTop_toTopOf="@+id/human_card_1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/human_card4_num"
        android:layout_width="32dp"
        android:layout_height="38dp"
        android:text="TextView"
        app:layout_constraintTop_toTopOf="@+id/human_card_4"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/human_card_4"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/human_card_4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="@+id/human_card_4"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.044" />

    <TextView
        android:id="@+id/human_card2_num"
        android:layout_width="32dp"
        android:layout_height="38dp"
        android:text="TextView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@+id/human_card_2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/human_card_2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/human_card_2"
        app:layout_constraintBottom_toBottomOf="@+id/human_card_2"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>
